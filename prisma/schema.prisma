generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  clerkId   String   @unique
  email     String   @unique
  name      String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  plans       GeneratedPlan[]
  workoutLogs WorkoutLog[]
  mealLogs    MealLog[]
  weightLogs  WeightLog[]
}

model GeneratedPlan {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  userId    String   @db.ObjectId
  user      User     @relation(fields: [userId], references: [id])
  planData  Json     // Stores the entire JSON object of the plan
  createdAt DateTime @default(now())
  isActive  Boolean  @default(true)
}

model WorkoutLog {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  userId    String   @db.ObjectId
  user      User     @relation(fields: [userId], references: [id])
  date      DateTime
  exercise  String
  sets      Int
  reps      Int
  weight    Float
  createdAt DateTime @default(now())
}

model MealLog {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  userId    String   @db.ObjectId
  user      User     @relation(fields: [userId], references: [id])
  date      DateTime
  name      String
  calories  Int
  protein   Int
  carbs     Int
  fats      Int
  createdAt DateTime @default(now())
}

model WeightLog {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  userId    String   @db.ObjectId
  user      User     @relation(fields: [userId], references: [id])
  date      DateTime
  weight    Float
  createdAt DateTime @default(now())
}
